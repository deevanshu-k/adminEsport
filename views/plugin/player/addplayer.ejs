<div class="add_player">
    <div class="head">Add Player</div>
    <div class="addform">
        <form action="http://<%= host %>:<%= port %>/player/updateap" method="post">
            <p>
                <label for="">Index</label>
                <input type="number" required name="index" id="">
            </p>
            <p>
                <label for="">Name</label>
                <input type="text" required name="name" id="">
            </p>
            <p>
                <label for="">Email</label>
                <input type="email" required name="email" id="">
            </p>
            <p>
                <label for="">Phone +91</label>
                <input type="number" required name="phone" id="">
            </p>
            <p>
                <label for="">Pubg name</label>
                <input type="text" required name="pubgusername" id="">
            </p>
            <p>
                <label for="">Pubg id</label>
                <input type="number" required name="pubguserid" id="">
            </p>
            <p>
                <label for="">Speciality</label>
                <input type="text" required name="speciality" id="">
            </p>
            <p>
                <label for="">Enroll Date</label>
                <input type="datetime-local" required name="date" id="">
            </p>
            <p>
                <input type="submit" value="Update">
            </p>
        </form>
    </div>
</div>